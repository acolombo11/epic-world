<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EpicWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_a400</item>
        <item name="colorPrimaryVariant">@color/pink_a700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EpicWorld.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/pink_a400</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.EpicWorld</item>
    </style>
</resources>